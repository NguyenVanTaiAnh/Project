<Window x:Class="Shop.Form_Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1100"
        ResizeMode="NoResize"
        WindowStyle= "None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="Image/shop.ico"
        Padding="20,10,10,10"
        Loaded="Window_Loaded">


    <Border CornerRadius="10"
            BorderThickness="1">

        <Border.BorderBrush>
            <!-- Tạo màu viền-->
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4C3575" Offset="0"/>
                <GradientStop Color="#5B4B8A" Offset="0.75"/>
                <GradientStop Color="#0E8388" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <!-- back color form-->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#160040" Offset="0.9"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.1"/>
            </LinearGradientBrush>

        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- panel left-->
            <Border Grid.Column="0"
                    Margin="20"
                    CornerRadius="10"
                    Background="#16003B">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="110"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Image Source="/Image/logo.png"
                               Margin="10,0,10,0"/>
                    </StackPanel>
                    <!-- button control -->
                    <StackPanel Grid.Row="1">

                        <RadioButton Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color1}"
                                 IsChecked="True"
                                 Command="{Binding ShowHomeViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Home" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- button bán hàng-->
                        <RadioButton x:Name="Banhang" 
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color2}"
                                 Click="Banhang_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Tag" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Bán hàng" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- button don hang-->
                        <RadioButton x:Name="Donhang"
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color3}"
                                     Click="Donhang_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="TruckFast" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Đơn hàng" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- button nhan vien-->
                        <RadioButton Name="Nhanvien" 
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color4}"
                                     Click="Nhanvien_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="User" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Nhân viên" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- button nhap hang-->
                        <RadioButton x:Name="Khohang"
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color8}"
                                 Click="Khohang_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Warehouse" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Kho hàng" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- button nhap hang-->
                            <RadioButton x:Name="Nhaphang"
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color6}"
                                 Click="Nhaphang_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="CartPlus" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Nhập hàng" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                        <!-- button thong ke-->
                        <RadioButton x:Name="Thongke"
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color5}"
                                 Click="Thongke_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="ChartBar" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Thống kê" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>


                    </StackPanel>

                    <StackPanel Grid.Row="2">

                        <!-- button dang xuat-->
                        <RadioButton x:Name="Dangxuat"
                                 Style="{StaticResource menuButton }"
                                 Tag="{StaticResource color7}"
                                 Click="Dangxuat_Click">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="RightFromBracket" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Đăng xuất" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                    
                </Grid>
                
            </Border>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- panel top-->
                <Border CornerRadius="10"
                        Grid.Row="0"
                        Margin="0,20,20,0"
                        Background="#16003B">

                        <Grid>
                            <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column ="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Width="30" Margin="20,0,0,0" Foreground="#E285DE"/>
                                <TextBlock Text="Home" FontSize="14" FontWeight="Medium" FontFamily="Montterat" TextAlignment="Center" Margin="20,5,0,0" VerticalAlignment="Center" Foreground="#E285DE"/>
                            </StackPanel>
                            <!-- button minisize-->
                            <Button
                                x:Name="btn_Minisize"
                                BorderThickness="0"
                                Content="-"
                                FontFamily="Century Gothic"
                                FontSize="14"
                                Foreground="LightGray"
                                Grid.Column="2"
                                Cursor="Hand"
                                Click="btn_Minisize_Click">

                                <Button.Style>
                                    <Style TargetType="Button">
                                    <Setter Property="Background" Value="#16003B"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0E8388"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="30" Height="30"
                                                CornerRadius="20"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <!-- butoon maxsize-->
                        <Button
                                x:Name="btn_Maxsize"
                                BorderThickness="0"
                                FontFamily="Century Gothic"
                                FontSize="16"
                                Foreground="LightGray"
                                Grid.Column="3"
                                Cursor="Hand"
                                Click="btn_Maxsize_Click"
                                >

                            <StackPanel>
                                <fa:IconImage Icon="Square"
                                              Foreground="LightGray"
                                              Height="14"
                                              Width="14"/>
                            </StackPanel>
                        
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#16003B"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0E8388"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="30" Height="30"
                                                CornerRadius="20"
                                                Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <!-- button close-->
                             <Button 
                                 x:Name="btn_Close"
                                 BorderThickness="0"
                                 Content="X"
                                 FontFamily="Century Gothic"
                                 FontSize="14"
                                 Foreground="LightGray"
                                 Grid.Column="4"
                                 Cursor="Hand"
                                 Click="btn_Close_Click">

                                    <Button.Style>
                                        <Style TargetType="Button">
                                    <Setter Property="Background" Value="#16003B"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#0E8388"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="30" Height="30"
                                                    CornerRadius="20"
                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                        </Grid>
                 </Border>
                <!-- main section-->
                <Border CornerRadius="10,10,10,10"
                        Margin="0,20,20,20"
                        Grid.Row="1"
                        >

                    <Border.Background>
                        <ImageBrush ImageSource="/Image/background.png"
                        Stretch="None"></ImageBrush>
                    </Border.Background>

                    <Border CornerRadius="10"
                        BorderThickness="2"
                        Opacity="0.93"
                        >

                        <Border.BorderBrush>
                            <!-- Tạo màu viền-->
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4C3575" Offset="0"/>
                                <GradientStop Color="#5B4B8A" Offset="0.75"/>
                                <GradientStop Color="#0E8388" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>

                        <Border.Background>
                            <!-- Tạo màu nền-->
                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                <GradientStop Color="#160040" Offset="0.9"/>
                                <GradientStop Color="#16003B" Offset="0.1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>

                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>


                                <Grid Grid.Row="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="450"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- panel logo-->
                                    <Border Grid.Column="0"
                                            CornerRadius="10"
                                            Margin="20"
                                            Background="#16003B"
                                            BorderThickness="1">


                                        <Border.BorderBrush>
                                            <!-- Tạo màu viền-->
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4C3575" Offset="0"/>
                                                <GradientStop Color="#5B4B8A" Offset="0.75"/>
                                                <GradientStop Color="#160040" Offset="0.5"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>


                                        <StackPanel Orientation="Vertical">
                                            <Image Source="/Image/logo.png"
                                                   Margin="20,10,20,10"/>


                                            <TextBlock Height="40"
                                                       HorizontalAlignment="Center"
                                                       Text="Date Time Now :"
                                                       Foreground="DarkGray"
                                                       FontSize="14"  
                                                       FontFamily="Century Gothic"
                                                       Margin="0,10,0,0"/>
                                            <!-- text time-->
                                            <TextBlock Name="Text_time"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       Foreground="DarkGray"
                                                       FontWeight="Medium"
                                                       FontSize="14"
                                                       FontFamily="Century Gothic"
                                                       Text="time"/>
                                        </StackPanel>


                                    </Border>

                                    <Border Grid.Column="1"
                                            CornerRadius="10"
                                            Margin="10,20,20,20"
                                            Background="#16003B"
                                            BorderThickness="1">


                                        <Border.BorderBrush>
                                            <!-- Tạo màu viền-->
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4C3575" Offset="0.4"/>
                                                <GradientStop Color="#5B4B8A" Offset="0.75"/>
                                                <GradientStop Color="#160040" Offset="0.5"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>

                                        <!-- thông tin user đăng nhập-->
                                        <Grid>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Row="0">

                                                <fa:IconImage Icon="User"
                                                          HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"
                                                          Height="30"
                                                          Margin="60,10,0,0"
                                                          Foreground="DarkGray"/>

                                                <TextBlock Text="Thông tin người dùng :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"/>

                                            </StackPanel>

                                            <!-- thông tin -->

                                            <StackPanel Grid.Row="1"
                                                        Orientation="Vertical">
                                                <!-- mã nhân viên-->
                                                <TextBlock Text="Mã nhân viên :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,0,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_MaNV"/>

                                                <!-- Họ tên-->
                                                <TextBlock Text="Họ tên :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_Hoten"/>

                                                <!-- Ngày sinh-->
                                                <TextBlock Text="Ngày sinh :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_Ngaysinh"/>
                                                <!-- quê quán-->
                                                <TextBlock Text="Địa chỉ :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_Diachi"/>
                                                <!-- số điện thoại-->
                                                <TextBlock Text="Số diện thoại :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_SDT"/>
                                                <!-- chức vụ-->
                                                <TextBlock Text="Vị trí :"
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_Trangthai"/>
                                                <!-- Ghi chú-->
                                                <TextBlock Text="Ghi chú : "
                                                           FontSize="14"
                                                           Foreground="DarkGray"
                                                           FontFamily="Century Gothic"
                                                           Margin="20,10,0,0"
                                                           VerticalAlignment="Center"
                                                           Name="_Ghichu"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="500"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Border BorderThickness="1"
                                            Margin="20,0,10,20"
                                            CornerRadius="10"
                                            Background="#16003B"
                                            Grid.Column="0">

                                        <Border.BorderBrush>
                                            <!-- Tạo màu viền-->
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4C3575" Offset="0"/>
                                                <GradientStop Color="#5B4B8A" Offset="0.75"/>
                                                <GradientStop Color="#160040" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>

                                        <Grid>
                                            <StackPanel>
                                                <Image Source="/Image/chart.png"
                                                       Height="210"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                    </Border>


                                    <Border BorderThickness="1"
                                            Margin="20,0,20,20"
                                            CornerRadius="10"
                                            Background="#16003B"
                                            Grid.Column="1">

                                        <Border.BorderBrush>
                                            <!-- Tạo màu viền-->
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4C3575" Offset="0"/>
                                                <GradientStop Color="#5B4B8A" Offset="0.75"/>
                                                <GradientStop Color="#160040" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>

                                        <Grid>
                                            <StackPanel Orientation="Vertical">
                                                <Image Source="/Image/chart2.png"
                                                       Height="200"
                                                       Margin="20,10,20,0"/>
                                            </StackPanel>
                                        </Grid>

                                    </Border>

                                </Grid>           
                            </Grid>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
